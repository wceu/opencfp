{% extends "layouts/admin.twig" %}
{% block content %}
<div class="module">
    <div class="module__body">
        <div class="row">
            {% if speaker.photo is not empty %}
                <img src="{{ uploads(speaker.photo) }}" class="profile-photo img-responsive" />
            {% else %}
                <img src="{{ assets('img/dummyphoto.jpg') }}" class="profile-photo img-responsive" />
            {% endif %}
            <div class="col-md-8">
                <blockquote>
                    <h2>{{ speaker.name }}</h2>
                </blockquote>
                <p>
                    <i class="fa fa-envelope"></i> <a href="mailto:{{ speaker.email }}">{{ speaker.email }}</a>
                    {% if speaker.twitter is not empty %}<br><i class="fa fa-twitter-square"></i> <a href="http://twitter.com/{{ speaker.twitter }}" target="_blank" rel="external">{{ speaker.twitter }}</a><br>{% endif %}
                    {% if speaker.company is not empty %}<strong>Company:</strong> {{ speaker.company }}<br />{%  endif %}
                    {% if speaker.nationality is not empty %}<strong>Nationality:</strong> {{ speaker.nationality }}<br />{%  endif %}
                    {% if speaker.wporg is not empty %}<strong>WordPress.org username:</strong> {{ speaker.wporg }}<br />{%  endif %}
                    {% if speaker.slack is not empty %}<strong>Making WordPress Slack username:</strong> {{ speaker.slack }}<br />{%  endif %}
                </p>
                <h3>Speaker Bio</h3>
                <p>{{ speaker.bio|striptags|markdown }}</p>

                {%  if speaker.info is not empty %}
                <p><strong>Additional Notes:</strong> {{ speaker.info }}</p>
                {% endif %}

                {% if talks | length > 0 %}
                    <h3>Talk Submissions</h3>

                    {% for talk in talks %}
                        <a href="{{ url('admin_talk_view', { id: talk.id }) }}">{{ talk.title }}</a><br />
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
